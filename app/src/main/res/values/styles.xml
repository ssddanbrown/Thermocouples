<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:actionBarItemBackground">@drawable/ab_bgselector</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:icon">@drawable/ab_logo</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/standardText</item>
    </style>

    <style name="searchlistitemtext">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="tcTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tcDetailFragmentTitleTextSize</item>
        <item name="android:id">@+id/tcTitle</item>
        <item name="android:text">Type K Thermocouple</item>
    </style>
    <style name="tcDetailInfo">
        <item name="android:textSize">@dimen/standardText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#636363</item>
    </style>

    <style name="tcDetailTabFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tcDetailRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/tabbackground</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="calcViewButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/standard_margin</item>
        <item name="android:paddingBottom">@dimen/standard_margin</item>
        <item name="android:paddingRight">@dimen/thick_margin</item>
        <item name="android:paddingLeft">@dimen/thick_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/headerText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="calculatorsEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/standardText</item>
        <item name="android:textColor">#3a3b3b</item>
        <item name="android:inputType">number|numberSigned|numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/thin_margin</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:background">@drawable/calcinput</item>
    </style>

    <style name="calcViewTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/headerText</item>
    </style>

    <style name="tcCalcLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="infotitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/standardText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">@dimen/thin_margin</item>
        <item name="android:paddingBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:background">@drawable/infotitlebg</item>
        <item name="android:gravity">bottom|left</item>
    </style>
    <style name="infoColourStandards">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/thin_margin</item>
        <item name="android:layout_marginRight">@dimen/thin_margin</item>
        <item name="android:layout_marginTop">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>
    
    <style name="tcmvcalcline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>


    
</resources>