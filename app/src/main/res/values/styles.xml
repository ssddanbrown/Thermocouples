<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppTheme" parent="Theme.MyTheme">

    </style>

    <style name="Theme.MyTheme" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:actionBarItemBackground">@drawable/ab_bgselector</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tcTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/pad_s</item>
        <item name="android:paddingLeft">@dimen/pad_s</item>
        <item name="android:paddingRight">@dimen/pad_s</item>
        <item name="android:paddingBottom">@dimen/pad_xs</item>
        <item name="android:textColor">@color/material_dynamic_primary30</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">Type K Thermocouple</item>
    </style>

    <style name="tcDetail">
        <item name="android:paddingLeft">@dimen/pad_s</item>
        <item name="android:paddingRight">@dimen/pad_s</item>
        <item name="android:paddingTop">@dimen/pad_xs</item>
        <item name="android:paddingBottom">@dimen/pad_xs</item>
    </style>

    <style name="tcDetailTitle">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/material_dynamic_secondary50</item>
    </style>

    <style name="tcDetailInfo">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/material_dynamic_primary30</item>
    </style>

    <style name="tcStandardImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">82dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="tcStandardImageWrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foregroundGravity">left|center_vertical</item>
    </style>

    <style name="tcStandardLabel">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/pad_xs</item>
        <item name="android:paddingBottom">@dimen/pad_xs</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_dynamic_secondary50</item>
    </style>

    <style name="tcStandardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/pad_s</item>
        <item name="android:paddingRight">@dimen/pad_s</item>
        <item name="android:paddingTop">@dimen/pad_xs</item>
        <item name="android:paddingBottom">@dimen/pad_xs</item>
    </style>

    <style name="calcViewButtons" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">@dimen/pad_s</item>
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="calcButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">@dimen/pad_s</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="calculatorsEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/pad_xs</item>
        <item name="android:layout_marginTop">@dimen/pad_s</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="calcViewTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:textSize">@dimen/headerText</item>
    </style>

    <style name="tcCalcLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="infotitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:paddingLeft">@dimen/pad_s</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="infoColourStandards">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pad_s</item>
        <item name="android:layout_marginRight">@dimen/pad_s</item>
        <item name="android:layout_marginBottom">@dimen/pad_xxxs</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="infoParagraph" parent="infoColourStandards">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="tcmvcalcline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>