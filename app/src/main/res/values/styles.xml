<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme.AppTheme" parent="Theme.MyTheme">

    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:actionBarItemBackground">@drawable/ab_bgselector</item>
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="tcTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:text">Type K Thermocouple</item>
    </style>

    <style name="tcDetail">
        <item name="android:paddingLeft">@dimen/pad_m</item>
        <item name="android:paddingRight">@dimen/pad_m</item>
        <item name="android:paddingTop">@dimen/pad_s</item>
        <item name="android:paddingBottom">@dimen/pad_s</item>
    </style>
    <style name="tcDetailTitle">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#888888</item>
    </style>
    <style name="tcDetailInfo">
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="tcDetailTabFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tcDetailTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/tabbackground</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calcViewButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">@dimen/pad_s</item>
    </style>

    <style name="calcButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">@dimen/pad_s</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="calculatorsEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/standardText</item>
        <item name="android:textColor">#3a3b3b</item>
        <item name="android:inputType">number|numberSigned|numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/thin_margin</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="calcViewTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/headerText</item>
    </style>

    <style name="tcCalcLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/thin_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="infotitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:paddingLeft">@dimen/pad_s</item>
        <item name="android:layout_marginBottom">@dimen/ultra_thin_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">bottom|left</item>
    </style>
    <style name="infoColourStandards">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pad_s</item>
        <item name="android:layout_marginRight">@dimen/pad_s</item>
        <item name="android:layout_marginBottom">@dimen/pad_xxxs</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>
    <style name="infoParagraph" parent="infoColourStandards">
        <item name="android:textSize">@dimen/text_s</item>
    </style>
    
    <style name="tcmvcalcline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>


    
</resources>