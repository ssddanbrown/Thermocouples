<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            android:foregroundGravity="center_vertical|center_horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/pad_xxs"
                    android:layout_margin="@dimen/thin_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/tcTitle"
                            android:id="@+id/tcTitle"
                            android:text="@string/tcTitleTest"
                            />

                        <RadioGroup
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_width="match_parent">
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBiec"
                                android:text="IEC"/>
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBbs"
                                android:text="BS"/>
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBansi"
                                android:text="ANSI"/>
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBnfe"
                                android:text="NFE"/>
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBdin"
                                android:text="DIN"/>
                            <RadioButton style="@style/tcDetailTab"
                                android:id="@+id/tcDetailRBjis"
                                android:text="JIS"/>
                        </RadioGroup>
                        <View
                            android:background="@color/primary"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_height="2dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tcDetailImageView"
                            android:layout_marginTop="@dimen/standard_margin"
                            android:layout_marginBottom="@dimen/thick_margin"
                            android:layout_gravity="center"
                            android:padding="@dimen/thin_margin"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            style="@style/tcDetail"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/tcDetailTitle"
                                android:id="@+id/tcPositiveLegTitle"
                                android:text="@string/tcPositive" />
                            <TextView
                                style="@style/tcDetailInfo"
                                android:id="@+id/tcPositiveLeg"
                                android:text="@string/tcDetailTest1"/>

                        </LinearLayout>


                        <LinearLayout
                            style="@style/tcDetail"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/tcDetailTitle"
                                android:id="@+id/tcNegativeLegTitle"
                                android:text="@string/tcNegative"/>
                            <TextView
                                style="@style/tcDetailInfo"
                                android:id="@+id/tcNegativeLeg"
                                android:text="@string/tcDetailTest2"/>

                        </LinearLayout>


                        <LinearLayout
                            style="@style/tcDetail"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/tcDetailTitle"
                                android:id="@+id/tcTempRangeTitle"
                                android:text="@string/tcTempRange"/>
                            <TextView
                                style="@style/tcDetailInfo"
                                android:id="@+id/tcTempRange"
                                android:text="@string/tcDetailTest3"/>

                        </LinearLayout>


                        <LinearLayout
                            style="@style/tcDetail"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/tcDetailTitle"
                                android:id="@+id/tcExtraTitle"
                                android:text="@string/tcExtra"/>
                            <TextView
                                style="@style/tcDetailInfo"
                                android:id="@+id/tcExtra"
                                android:text="@string/tcDetailTest4"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>



        </FrameLayout>



    </ScrollView>
</RelativeLayout>

