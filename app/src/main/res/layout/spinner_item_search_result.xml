<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/listItemLarge"
    android:layout_width="match_parent"
    android:focusable="false"
    >
    <LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/pad_s"
    android:paddingRight="@dimen/pad_s"
	android:paddingTop="@dimen/pad_xs"
	android:paddingBottom="@dimen/pad_xs"
    android:background="#FFFFFF"
    android:layout_marginBottom="@dimen/divider"
    >
    
    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        
	        <TextView
		    android:id="@+id/tcstvtype"
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:text="Type K"
		    android:gravity="start|center_vertical"
		    android:textSize="30sp"
		    android:textColor="@color/primary20"/>
			
			<TextView
		    android:id="@+id/tcstvstandard"
		    android:layout_width="match_parent"
		    android:layout_height="28dp"
		    android:gravity="left|top"
		    android:text="IEC"
		    android:textSize="20sp"
			android:textStyle="bold"
		    android:textColor="@color/secondary40"/>
        
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/tcsiv"
        android:padding="8dp"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"/>

</LinearLayout>
    
    
    
</FrameLayout>

